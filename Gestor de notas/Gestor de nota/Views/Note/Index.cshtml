@model IEnumerable<NoteApp.Models.Note>
@{
    ViewData["Title"] = "Notes";
}

<h2>Notes</h2>

<p>
    <a href="/Note/Create" class="btn btn-primary">Create New Note</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Category.Name</td>
                <td>
                    <a href="/Note/Edit/@item.Id" class="btn btn-warning">Edit</a>
                    <a href="/Note/Details/@item.Id" class="btn btn-info">Details</a>
                    <a href="/Note/Delete/@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
