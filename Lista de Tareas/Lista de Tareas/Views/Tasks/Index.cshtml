@model IEnumerable<MyTodoApp.Models.TodoTask>

<h2>Tasks</h2>
<a href="/Tasks/Create">Create New Task</a>
<table>
    <thead>
        <tr>
            <th>Description</th>
            <th>Completed</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Description</td>
                <td>@task.IsCompleted</td>
                <td>
                    <a href="/Tasks/Edit/@task.Id">Edit</a> |
                    <a href="/Tasks/Delete/@task.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
